<!-- Fallback link to the menu, replaced on page load with an iframe version
     -->
<div id="plone-toolbar-trigger">

    <iframe
       src="@@plone_toolbar"
       id="plone-toolbar"
       name="plone-toolbar"
       tal:attributes="src string:${context/absolute_url}/@@plone_toolbar">
      <a id="plone-toolbar-link" href="@@plone_toolbar" target="_blank"
         tal:attributes="href string:${context/absolute_url}/@@plone_toolbar"
         i18n:translate="">
        Manage page
      </a>
    </iframe>

</div>
